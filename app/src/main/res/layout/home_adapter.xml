<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/home_mainlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimens_5dp"
        android:orientation="vertical">


        <ImageButton
            android:id="@+id/imagebutton_homeitem"
            android:layout_width="@dimen/dimens_80dp"
            android:layout_height="@dimen/dimens_80dp"
            android:layout_gravity="center"
            android:background="@drawable/btn_circle"
            android:elevation="@dimen/dimens_10dp"
            android:padding="@dimen/dimens_20dp"
            android:src="@drawable/make_up" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_homeitem_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_regular"
            android:gravity="center"
            android:maxLines="2"
            android:padding="@dimen/dimens_2dp"
            android:text="@string/hair_specialist"
            android:textColor="@color/white"
            android:textSize="@dimen/dimens_16sp"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>