<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dimens_10dp"
    android:background="@color/transparent"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="@dimen/dimens_10dp"
        app:cardCornerRadius="@dimen/dimens_10dp">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/image_offer"
                android:layout_width="@dimen/dimens_100dp"
                android:scaleType="centerCrop"
                android:layout_height="@dimen/dimens_100dp"
                android:src="@drawable/ic_email"
                app:srcCompat="@drawable/one" />

        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.cardview.widget.CardView>
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/dimens_10dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_offername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:fontFamily="@font/montserrat_regular"
            android:maxLines="2"
            android:padding="@dimen/dimens_5dp"
            android:text="Hair Specialist"
            android:textColor="@color/white"
            android:textSize="@dimen/dimens_14sp" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_offer_discount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:fontFamily="@font/montserrat_regular"
            android:maxLines="1"
            android:padding="@dimen/dimens_5dp"
            android:textColor="@color/white"
            android:textSize="@dimen/dimens_14sp" />
    </androidx.appcompat.widget.LinearLayoutCompat>
</androidx.appcompat.widget.LinearLayoutCompat>