<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Gray shadow. -->
    <item
        android:left="@dimen/dimens_7dp"
        android:top="@dimen/dimens_3dp">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" />
            <corners android:radius="@dimen/dimens_50dp" />
        </shape>
    </item>
    <!-- White foreground. -->
    <item
        android:left="@dimen/dimens_7dp"
        android:top="@dimen/dimens_3dp">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/dimens_50dp" />
            <gradient
                android:angle="360"
                android:endColor="@color/app_dark"
                android:startColor="@color/app_light" />
        </shape>
    </item>
</layer-list><!--
